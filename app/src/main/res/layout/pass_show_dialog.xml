<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/dialog_title"
        android:gravity="center_vertical"
        android:text=" ⬛ 明文密码"
        android:textAlignment="center"
        android:textColor="@color/dialog_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_pass"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/textback"
        android:gravity="center"
        android:text="密码明文"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/updata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_type_update"
            android:text=" ⬛ 修改"
            android:textColor="@drawable/text_type_update" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dialog_text" />

        <Button
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_type_update"
            android:text=" ⬛ 复制"
            android:textColor="@drawable/text_type_update" />
    </LinearLayout>
</LinearLayout>